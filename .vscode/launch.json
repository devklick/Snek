{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Snek/bin/Debug/net7.0/Snek.dll",
      "args": [
        // "-h",
        // "--width",
        // "13",
        // "--height",
        // "7",
        // "--initialTicksPerSecond",
        // "6",
        "--increase-speed",
        "true",
        "--collision",
        "Rebound",
        "--audio",
        "false"
      ],
      "cwd": "${workspaceFolder}/Snek/bin/Debug/net7.0/",
      "console": "externalTerminal",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
