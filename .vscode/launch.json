  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Snek/bin/Debug/net7.0/Snek.dll",
      "args": [
        // "width",
        // "20",
        // "height",
        // "40",
        // "initialTicksPerSecond",
        // "10",
        // "increaseSpeedOnEnemyDestroyed",
        // "true",
        // "wallCollisionBehavior",
        // "Portal"
        // "audioEnabled",
        // "true"
      ],
      "cwd": "${workspaceFolder}/Snek/bin/Debug/net7.0/",
      "console": "externalTerminal",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
